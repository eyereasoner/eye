# -----------------------------
# Access control policy example
# -----------------------------

@prefix list: <http://www.w3.org/2000/10/swap/list#>.
@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix : <http://example.org/#>.

:test1 :policy :PolicyX;
    :has :A, :B, :C.

:PolicyX a :Policy;
    :allOf :A, :B;
    :anyOf :C;
    :noneOf :D.

{
    ?Pol :pass :allOfTest.
} <= {
    ?Test :policy ?Pol.
    ?Pol a :Policy.
    ({?Pol :allOf ?Field} {?Test :has ?Field}) log:forAllIn ?X.
}.

{
    ?Pol :pass :anyOfTest.
} <= {
    ?Test :policy ?Pol.
    ?Pol a :Policy.
    (?Field {?Pol :anyOf ?Field. ?Test :has ?Field} ?List) log:collectAllIn ?X.
    ?List list:length ?L.
    ?L log:notEqualTo 0.
}.

{
    ?Pol :pass :noneOfTest.
} <= {
    ?Test :policy ?Pol.
    ?Pol a :Policy.
    (?Field {?Pol :noneOf ?Field. ?Test :has ?Field} ?List) log:collectAllIn ?X.
    ?List list:length ?L.
    ?L log:equalTo 0.
}.

# query
{
    ?Pol a :Policy.
    ?Pol :pass :allOfTest.
    ?Pol :pass :anyOfTest.
    ?Pol :pass :noneOfTest.
} log:query {
    :test :for ?Pol.
    :test :is true.
}.
