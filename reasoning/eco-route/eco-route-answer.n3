PREFIX ex: <https://w3id.org/insight-economy/example#>
PREFIX ui: <https://w3id.org/insight-economy/ui#>

[ a                         ex:Banner;
  ex:fuelIndex              120.74999999999999;
  ex:headline               "Eco opportunity. Lower-fuel route available.";
  ex:note                   [ ex:kind       "HighFuelIndex";
                              ex:threshold  120.0
                            ];
  ex:route                  ex:currentRoute;
  ex:suggested_alternative  ex:altRoute
] .

[ ex:estimatedSaving  20.999999999999986 ] .

[ ex:suggestRoute  ex:altRoute ] .

[ a              ex:InsightEnvelope;
  ex:assert      [ ex:currentFuelIndex  120.74999999999999;
                   ex:currentRoute      ex:currentRoute
                 ];
  ex:payload     [ ui:metric     ex:fuelIndex;
                   ui:operator   ">=";
                   ui:strategy   "lower_metric_first";
                   ui:threshold  120.0;
                   ui:title      "Eco opportunity.\nLower-fuel route available."
                 ];
  ex:provenance  [ ex:created_at  [] 
                 ];
  ex:recipient   ex:DepotX;
  ex:scope       [ ex:device          "depot-tablet";
                   ex:event           "scan_start";
                   ex:expires_within  "PT2H";
                   ex:valid_for       "this_run"
                 ]
] .

ex:altRoute  ex:comfortIndex  48.5;
        ex:fuelIndex     99.75 .

ex:currentRoute  ex:comfortIndex  53.5;
        ex:fuelIndex     120.74999999999999 .
