@prefix : <http://example.org#>.

# Knights always tell the truth
{
    ?P a :Knight.
    ?P :says ?Stmt.
} => ?Stmt.

# Knaves always lie
{
    ?P a :Knave.
    ?P :says ?Stmt.
} => {
    ?Stmt => ($ $).
}.

# mutually exclusive: can't be both a Knight and a Knave
{
    ?X a :Knight.
    ?X a :Knave.
} => ($ $).

# statements made by each person
:a :says { :b a :Knave }.
:b :says { :c a :Knave }.
:c :says { :a a :Knight }.

# goal: find the only consistent identity assignment
{
    ?X a ?Y.
} =^ {
    ?X a ?Y.
}.
