# -----------------------
# Basic Monadic Benchmark
# -----------------------
#
# See https://eulersharp.sourceforge.net/2003/03swap/bmb-note

@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix lingua: <http://www.w3.org/2000/10/swap/lingua#>.
@prefix var: <http://www.w3.org/2000/10/swap/var#>.
@prefix bmt: <http://eulersharp.sourceforge.net/2007/07test/graph#>.
@prefix : <#>.

# importing
:imports_rule a lingua:ForwardRule;
    lingua:premise _:imports_rule_premise;
    lingua:conclusion _:imports_rule_conclusion.

_:imports_rule_premise {
    <> log:imports <../reasoning/bmt/1tt1.ttl>.
    <> log:imports <../reasoning/bmt/1tt2.ttl>.
    <> log:imports <../reasoning/bmt/1tt3.ttl>.
    <> log:imports <../reasoning/bmt/1tt4.ttl>.
    <> log:imports <../reasoning/bmt/1tt5.ttl>.
    <> log:imports <../reasoning/bmt/1tt6.ttl>.
    <> log:imports <../reasoning/bmt/1tt7.ttl>.
    <> log:imports <../reasoning/bmt/1tt8.ttl>.
    <> log:imports <../reasoning/bmt/1tt9.ttl>.
    <> log:imports <../reasoning/bmt/1tt10.ttl>.
}

_:imports_rule_conclusion {
}

#query
:bmt_query a lingua:QueryRule;
    lingua:premise _:bmt_query_premise;
    lingua:conclusion _:bmt_query_conclusion.

_:bmt_query_premise {
    var:D0 var:R var:D1.
    var:D1 var:R var:D2.
    var:D2 var:R var:D3.
    var:D3 var:R var:D4.
    var:D4 var:R var:D5.
    var:D5 var:R var:D6.
    var:D6 var:R var:D7.
    var:D7 var:R var:D8.
    var:D8 var:R var:D9.
    var:D9 var:R var:D0.
}

_:bmt_query_conclusion {
    var:R bmt:cycle (var:D0 var:D1 var:D2 var:D3 var:D4 var:D5 var:D6 var:D7 var:D8 var:D9).
}
